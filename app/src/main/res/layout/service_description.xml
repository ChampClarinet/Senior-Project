<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--Special pets-->
        <LinearLayout
            android:id="@+id/group_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/special_pets_acceptance" />

            <TextView
                android:id="@+id/service_acceptance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_margin"
                android:text="@string/none" />

        </LinearLayout>

        <!--time-->
        <LinearLayout
            android:id="@+id/group_time_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/group_available">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/my_default_margin"
                android:src="@drawable/ic_schedule_black_24dp"
                android:tint="@color/icon" />

            <TextView
                android:id="@+id/service_is_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/default_margin"
                android:text="@string/open"
                android:textColor="#00FF00" />

            <TextView
                android:id="@+id/service_time_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mock_time"
                android:textColor="@color/text2" />

        </LinearLayout>

        <!--tel-->
        <LinearLayout
            android:id="@+id/group_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/group_time_open">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/my_default_margin"
                android:src="@drawable/ic_call_black_24dp"
                android:tint="@color/icon" />

            <TextView
                android:id="@+id/service_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mock_tel" />

        </LinearLayout>

        <!--address-->
        <LinearLayout
            android:id="@+id/group_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/group_tel">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/my_default_margin"
                android:src="@drawable/ic_home_black_24dp"
                android:tint="@color/icon" />

            <TextView
                android:id="@+id/service_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mock_address" />

        </LinearLayout>

        <View
            android:id="@+id/separator_service_layout1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="@dimen/my_default_margin"
            android:background="@color/colorPrimaryDark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/group_address" />

        <!--Map-->
        <RelativeLayout
            android:id="@+id/service_open_map_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/my_default_margin"
            android:background="@color/colorPrimary"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/my_default_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/separator_service_layout1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="@string/open_maps"
                android:textColor="@color/text" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/ic_chevron_right_black_24dp"
                android:tint="@color/text" />

        </RelativeLayout>

        <!--Review-->
        <RelativeLayout
            android:id="@+id/service_open_review_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/my_default_margin"
            android:background="@color/colorPrimary"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/my_default_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/service_open_map_button">

            <TextView
                android:id="@+id/service_tv_review_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="@dimen/default_margin"
                android:text="@string/reviews"
                android:textColor="@color/text" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/ic_chevron_right_black_24dp"
                android:tint="@color/text" />

        </RelativeLayout>

        <View
            android:id="@+id/separator_service_layout2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="@dimen/my_default_margin"
            android:background="@color/colorPrimaryDark"
            app:layout_constraintBottom_toTopOf="@id/service_desc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/service_open_review_button" />

        <!--Description-->
        <TextView
            android:id="@+id/service_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/my_default_margin"
            android:singleLine="false"
            android:text="@string/mock_description"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/separator_service_layout2" />

        <View
            android:id="@+id/separator_service_layout3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="@dimen/my_default_margin"
            android:background="@color/colorPrimaryDark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/service_desc" />

    </android.support.constraint.ConstraintLayout>

</ScrollView>