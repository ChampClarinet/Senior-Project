<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#a7bff2"
    android:layout_marginBottom="@dimen/my_margin">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/other_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/my_margin"
            android:layout_marginStart="@dimen/my_margin"
            android:layout_marginTop="@dimen/my_margin"
            android:text="Other"
            android:textSize="@dimen/heading_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/other_price_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/my_margin"
            android:layout_marginEnd="@dimen/my_margin"
            android:layout_marginStart="@dimen/my_margin"
            android:layout_marginTop="@dimen/my_margin"
            android:text="@string/other_start_price_label"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/other_heading" />

        <TextView
            android:id="@+id/other_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/my_margin"
            android:layout_marginStart="@dimen/my_margin"
            android:layout_marginTop="@dimen/my_margin"
            android:text="200"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/other_price_label"
            app:layout_constraintTop_toBottomOf="@id/other_heading" />

    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>