<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/my_margin"
    android:layout_marginTop="@dimen/my_margin"
    android:padding="@dimen/my_margin"
    tools:context=".DetailActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/service_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/my_margin"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/card_groom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/colorAccent3">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/groom_heading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/my_margin"
                        android:layout_marginStart="@dimen/my_margin"
                        android:layout_marginTop="@dimen/my_margin"
                        android:text="@string/groom_heading"
                        android:textColor="@color/text"
                        android:textSize="@dimen/heading_text"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/groom_start_price_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/my_margin"
                        android:layout_marginEnd="@dimen/my_margin"
                        android:layout_marginStart="@dimen/my_margin"
                        android:layout_marginTop="@dimen/my_margin"
                        android:text="@string/groom_start_price_label"
                        android:textColor="@color/text"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/groom_heading" />

                    <TextView
                        android:id="@+id/groom_start_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/my_margin"
                        android:layout_marginStart="@dimen/my_margin"
                        android:layout_marginTop="@dimen/my_margin"
                        android:text="X"
                        android:textColor="@color/text"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/groom_start_price_label"
                        app:layout_constraintTop_toBottomOf="@id/groom_heading" />

                </android.support.constraint.ConstraintLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_hospital"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/my_margin"
                app:cardBackgroundColor="@color/colorAccent">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/hospital_heading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/my_margin"
                        android:layout_marginStart="@dimen/my_margin"
                        android:layout_marginTop="@dimen/my_margin"
                        android:text="@string/hospital_heading"
                        android:textColor="@color/text"
                        android:textSize="@dimen/heading_text"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/is_accept_big_operation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/my_margin"
                        android:layout_marginTop="@dimen/my_margin"
                        android:text="@string/operation_acceptance"
                        android:textColor="@color/text"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/hospital_heading" />

                    <TextView
                        android:id="@+id/checkup_start_price_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/my_margin"
                        android:layout_marginTop="@dimen/my_margin"
                        android:text="@string/checkup_start_price_label"
                        android:textColor="@color/text"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/is_accept_big_operation" />

                    <TextView
                        android:id="@+id/checkup_start_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/my_margin"
                        android:layout_marginTop="@dimen/my_margin"
                        android:text="X"
                        android:textColor="@color/text"
                        app:layout_constraintStart_toEndOf="@+id/checkup_start_price_label"
                        app:layout_constraintTop_toBottomOf="@id/is_accept_big_operation" />

                    <TextView
                        android:id="@+id/vaccine_start_price_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/my_margin"
                        android:layout_marginStart="@dimen/my_margin"
                        android:layout_marginTop="@dimen/my_margin"
                        android:text="@string/vaccine_start_price_label"
                        android:textColor="@color/text"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/checkup_start_price_label" />

                    <TextView
                        android:id="@+id/vaccine_start_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/my_margin"
                        android:layout_marginTop="@dimen/my_margin"
                        android:text="X"
                        android:textColor="@color/text"
                        app:layout_constraintStart_toEndOf="@id/vaccine_start_price_label"
                        app:layout_constraintTop_toBottomOf="@id/checkup_start_price" />

                    <TextView
                        android:id="@+id/operation_start_price_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/my_margin"
                        android:layout_marginEnd="@dimen/my_margin"
                        android:layout_marginStart="@dimen/my_margin"
                        android:layout_marginTop="@dimen/my_margin"
                        android:text="@string/operation_start_price_label"
                        android:textColor="@color/text"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/vaccine_start_price_label" />

                    <TextView
                        android:id="@+id/operation_start_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/my_margin"
                        android:layout_marginStart="@dimen/my_margin"
                        android:layout_marginTop="@dimen/my_margin"
                        android:text="X"
                        android:textColor="@color/text"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/operation_start_price_label"
                        app:layout_constraintTop_toBottomOf="@id/vaccine_start_price" />

                </android.support.constraint.ConstraintLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_hotel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/my_margin"
                app:cardBackgroundColor="@color/colorAccent2">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/hotel_heading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/my_margin"
                        android:layout_marginStart="@dimen/my_margin"
                        android:layout_marginTop="@dimen/my_margin"
                        android:text="@string/hotel_heading"
                        android:textColor="@color/text"
                        android:textSize="@dimen/heading_text"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/is_accept_overnight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/my_margin"
                        android:layout_marginTop="@dimen/my_margin"
                        android:text="@string/overnight_acceptance"
                        android:textColor="@color/text"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/hotel_heading" />

                    <TextView
                        android:id="@+id/hotel_start_price_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/my_margin"
                        android:layout_marginEnd="@dimen/my_margin"
                        android:layout_marginStart="@dimen/my_margin"
                        android:layout_marginTop="@dimen/my_margin"
                        android:text="@string/hotel_start_price_label"
                        android:textColor="@color/text"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/is_accept_overnight" />

                    <TextView
                        android:id="@+id/hotel_start_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/my_margin"
                        android:layout_marginStart="@dimen/my_margin"
                        android:layout_marginTop="@dimen/my_margin"
                        android:text="X"
                        android:textColor="@color/text"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/hotel_start_price_label"
                        app:layout_constraintTop_toBottomOf="@id/is_accept_overnight" />

                </android.support.constraint.ConstraintLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_other_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/my_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/service_group" />

    </android.support.constraint.ConstraintLayout>

</ScrollView>